<h1>Редактирование {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
          <input placeholder="Название курса" name='title' id="title" type="text" class="validate" required value="{{course.title}}">
          <label for="title">Название курса</label>
           <span class="helper-text" data-error="Введите название курса"></span>
    </div>
    <div class="input-field">
          <input placeholder="Цена курса" name='price' id="price" type="text" class="validate" required value="{{course.price}}">
          <label for="price">Цена курса</label>
            <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field">
          <input placeholder="URL-картинки" name='img' id="image" type="text" class="validate" required  value="{{course.img}}">
          <label for="image">URL-картинки</label>
            <span class="helper-text" data-error="Добавьте URL-картинки"></span>
    </div>
    <div class="input-field">
          <input  name='id' id="image" type="hidden" required  value="{{course.id}}">
    </div>
    <button class="btn btn-primery">Добавить изменения</button>
</form>