<h1>Добавить новый курс</h1>

<form action="/add" method="POST">
    <div class="input-field">
          <input placeholder="Название курса" name='title' id="title" type="text" class="validate" required>
          <label for="title">Название курса</label>
           <span class="helper-text" data-error="Введите название курса"></span>
    </div>
    <div class="input-field">
          <input placeholder="Цена курса" name='price' id="price" type="text" class="validate" required>
          <label for="price">Цена курса</label>
            <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field">
          <input placeholder="URL-картинки" name='url' id="image" type="text" class="validate" required>
          <label for="image">URL-картинки</label>
            <span class="helper-text" data-error="Добавьте URL-картинки"></span>
    </div>
    <button class="btn btn-primery">Добавить</button>
</form>